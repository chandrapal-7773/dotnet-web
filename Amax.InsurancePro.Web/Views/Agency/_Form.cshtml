<div class="offcanvas-header">
    <h5 class="offcanvas-title">Add New Agency</h5>
    <button type="button" class="btn-close" aria-label="Close"></button>
</div>
<div class="offcanvas-body">
    <form id="agency-form">
        @Html.AntiForgeryToken()
        <div><span class="text-danger form-error"></span></div>
        <div class="row row-block g-2">
            <div class="block-heading"><h3>Agency Information</h3></div>
            <div class="col-md-6">
                <input type="text" name="AgencyName" placeholder="Agency Name" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <input type="text" name="AgencyAddressLine1" placeholder="Address" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <input type="text" name="AgencyPhone1" placeholder="Phone Number" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <input type="number" name="DefaultBankAccountId" placeholder="Default Bank Account" class="form-control" />
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="row row-block g-2">
            <div class="block-heading"><h3>Custom Message</h3></div>
            <div class="col-12">
                <textarea name="CustomMsg" cols="20" rows="3" class="form-control border-0" placeholder="Type Your Message ..."></textarea>
            </div><!--end of col-12-->
        </div>

        <div class="row row-block g-2">
            <div class="block-heading"><h3>Integrations</h3></div>
            TODO
        </div>
        <div class="row">
            <div class="col-12 text-end">
                <button type="button" class="red-btn submit-btn">SAVE</button>
            </div>
        </div>
    </form>
</div>
