@{
	Layout = "~/Views/Shared/_BlankLayout.cshtml";
	ViewData["Title"] = "Reset Password";
}

<div class="login">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12 text-center">
				<img src="~/theme/images/logo.png" alt="" />
			</div><!--end of col-12-->
			<div class="col-12 mt-3">
				<h2 class="heading"><span class="fw-bold">Agent Reset Password</span></h2>
			</div><!--end of col-12-->
			<div class="e-alert d-none">

			</div>
			<form id="reset-password">
				@Html.AntiForgeryToken()
				<div class="col-12 mt-3">
					<label >Username</label>
					<input type="text" class="form-control" placeholder="name@example.com" />
					<span class="text-danger"></span>
				</div><!--end of col-12-->
				<div class="col-12 my-3">
					<label>Password</label>
					<input type="password" class="form-control" placeholder="Password" />
					<span class="text-danger"></span>
				</div><!--end of col-12-->
				<div class="col-12 my-3">
					<label>New Password</label>
					<input type="password" class="form-control" placeholder="Password" />
					<span class="text-danger"></span>
				</div><!--end of col-12-->
				<div class="col-12 my-3">
					<label>Confirm Password</label>
					<input type="password" class="form-control" placeholder="Password" />
					<span class="text-danger"></span>
				</div><!--end of col-12-->
				<div class="col-12 mt-3">
					<button type="submit">Reset</button>
				</div><!--end of col-12-->

			</form>
			<section id="reset-success" class="d-none">
				<div class="col-12 mt-3">
					<button type="button" onclick="location.href = '@Url.Action("Index","Home")'">Home</button>
				</div><!--end of col-12-->
			</section>

		</div><!--end of row-->
	</div><!--end of container-fluid-->
</div>

@section scripts {
	<script src="~/assets/libs/jquery-steps/lib/jquery.cookie-1.3.1.js"></script>
	<script src="~/js/auth/login.js" asp-append-version="true"></script>

	<script>
		Amax.Common.clearStorage();
	</script>
}